root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[{.babelrc,.compressrc,.eslintrc}]
indent_size = 2

[*.{css,html,js,json,md,yaml,yml}]
indent_size = 2

[*.{elm,py,rst}]
indent_size = 4

[Makefile]
indent_style = tab
tab_width = 4
