root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[{.babelrc,.compressrc,.eslintrc,.linguirc}]
indent_size = 2

[*.{css,cfg,html,html.j2,ini,js,json,md,service,service.j2,toml,yaml,yml,xml}]
indent_size = 2

[*.{nginx,nginx.j2,py,rst,sh}]
indent_size = 4

[*Makefile*]
indent_style = tab
tab_width = 4

[*.mk]
indent_style = tab
tab_width = 4
